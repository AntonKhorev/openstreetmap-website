<% content_for :heading do %>
  <h1><%= t ".heading", :user => @user.display_name %></h1>
  <p><%= t ".subheading_html",
           :user => link_to(@user.display_name, user_path(@user)),
           :submitted => tag.span(t(".subheading_submitted"), :class => "px-2 py-1 bg-primary bg-opacity-25"),
           :commented => tag.span(t(".subheading_commented"), :class => "px-2 py-1 bg-white") %></p>
<% end %>

<% if @notes.empty? %>
  <h4><%= t ".no_notes" %></h4>

<% else %>
  <%= render "shared/pagination",
             :newer_translation_key => "notes.index.newer_notes",
             :older_translation_key => "notes.index.older_notes",
             :newer_id => @newer_notes && @notes.first.id,
             :older_id => @older_notes && @notes.last.id %>

  <table class="table table-sm note_list">
    <thead>
      <tr>
        <th></th>
        <th><%= t ".id" %></th>
        <th><%= t ".creator" %></th>
        <th><%= t ".description" %></th>
        <th><%= t ".created_at" %></th>
        <th><%= t ".last_changed" %></th>
      </tr>
    </thead>
  <% @notes.each do |note| -%>
    <tr<% if note.author == @user %> class="table-primary"<% end %>>
      <td>
        <% if note.closed? %>
          <%= image_tag("closed_note_marker.png", :alt => "closed", :size => "25x40") %>
        <% else %>
          <%= image_tag("open_note_marker.png", :alt => "open", :size => "25x40") %>
        <% end %>
      </td>
      <td><%= link_to note.id, note %></td>
      <td><%= note_author(note.author) %></td>
      <td><%= note.comments.first.body.to_html %></td>
      <td><%= friendly_date_ago(note.created_at) %></td>
      <td><%= friendly_date_ago(note.updated_at) %></td>
    </tr>
  <% end -%>
  </table>

  <%= render "shared/pagination",
             :newer_translation_key => "notes.index.newer_notes",
             :older_translation_key => "notes.index.older_notes",
             :newer_id => @newer_notes && @notes.first.id,
             :older_id => @older_notes && @notes.last.id %>

<% end -%>
